{
  "extends": "@repo/typescript-config/nextjs.json",
  "references": [
    {
      "path": "../../packages/utils"
    }
  ],
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "@/*": ["./src/*"],
      "contentlayer/generated": ["./.contentlayer/generated"]
    },
    "strictNullChecks": true
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    ".contentlayer/generated",
    "tailwind.config.js",
    "postcss.config.js",
    "next.config.js"
  ],
  "exclude": ["node_modules"]
}
